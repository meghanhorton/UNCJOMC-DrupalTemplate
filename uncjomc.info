stylesheets[all][] = 'css/overrides.css'
stylesheets[all][] = 'css/style.css'
stylesheets[all][] = 'css/menu.css'

; Scripts
scripts[] = 'js/main.js'

; ; Scripts
scripts[] = 'bootstrap/js/bootstrap.min.js'
; scripts[] = 'bootstrap/js/affix.js'
; scripts[] = 'bootstrap/js/alert.js'
