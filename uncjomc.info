name = UNC JOMC
description = A Bootstrap Sub-theme for the UNC School of Journalism and Mass Communication
core = 7.x
base theme = bootstrap

; Regions
; regions[navigation]     		= 'Navigation'
; regions[header]         		= 'Top Bar'
regions[sidebar_first]  		= 'Primary'
regions[sidebar_second] 		= 'Secondary'
regions[calendar]		  		= 'Calendar'
regions[slider]					= 'Slider'
regions[highlighted]    		= 'Highlighted'
regions[home-narrow-l]			= 'Home, Left, 3 wide'
regions[home-wide]				= 'Home, Center, 6 wide'
regions[home-narrow] 			= 'Home, Right, 3 wide'
regions[help]           		= 'Help'
regions[content]        		= 'Content'
regions[footer_a]       		= 'Footer - Column A'
regions[footer_b]				= 'Footer - Column B'
regions[footer_c]				= 'Footer - Column C'
regions[login]         			= 'Login'
regions[search]        			= 'Search'
regions[specialization] 		= 'Specializations'
regions[form-scholarship] 		= 'Exposed form, scholarships'

; Region Wells
; --------------
settings[bootstrap_region_well-sidebar_first] = ''

; Stylesheets
stylesheets[all][] = 'bootstrap/css/bootstrap.css'
